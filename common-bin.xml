            <source>README.rst</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>CHANGES.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>crate:elasticsearch-crate-plugin*</include>
            </includes>
            <excludes>
                <exclude>com.github.tlrx:elasticsearch-test*</exclude>
                <exclude>log4j:log4j*</exclude>
            </excludes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>/plugins/crate-admin</outputDirectory>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>crate:elasticsearch-timefacets-plugin*</include>
