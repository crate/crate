            </excludes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>/plugins/elasticsearch-inout-plugin
                </outputDirectory>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>crate:crate-sql-plugin*</include>
                <include>com.akiban:sql*</include>
            </includes>
            <excludes>
                <exclude>com.github.tlrx:elasticsearch-test*</exclude>
                <exclude>log4j:log4j*</exclude>
            </excludes>
