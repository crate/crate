        <fileSet>
            <directory>sources/config</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                plugins/elasticsearch-head-${elasticsearch-head-plugin.version}
            </directory>
            <outputDirectory>plugins/head/_site</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
