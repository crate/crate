                <include>**</include>
            </includes>
            <excludes>
                <exclude>.gitignore</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>
                plugins/elasticsearch-segmentspy-${segmentspy-plugin.version}
            </directory>
            <outputDirectory>plugins/segmentspy</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>screenshot.png</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>elasticsearch-crate-plugin/crate-admin/dist</directory>
            <outputDirectory>plugins/crate-admin/_site</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>docs/out/html</directory>
            <outputDirectory>plugins/docs/_site</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
