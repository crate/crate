<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <suppress files=".*[/\\]antlr[/\\].*" checks="."/>
    <!-- Keep ES format to avoid conflicts when applying ES patches -->
    <suppress files=".*[/\\]main[/\\]java[/\\]org[\\/]elasticsearch[/\\]snapshots[/\\]SnapshotsService.java" checks="."/>
    <suppress files=".*[/\\]test[/\\]java[/\\]org[\\/]elasticsearch[/\\].*java" checks="."/>
    <suppress files=".*[/\\]test[/\\]java[/\\]org[\\/]apache[/\\]lucene[/\\].*java" checks="."/>
    <suppress files=".*[/\\]testFixtures[/\\]java[/\\]org[\\/]elasticsearch[/\\].*java" checks="."/>
    <suppress files=".*[/\\]testFixtures[/\\]java[/\\]org[/\\]apache[\\/]lucene[/\\].*java" checks="."/>
    <suppress files=".*[/\\]test[/\\]java[/\\]io[/\\]crate[/\\]common[/\\]OctalTest.java" checks="IllegalTokenText"/>
    <suppress
            files=".*[/\\]test[/\\]java[/\\]io[/\\]crate[/\\]expression[/\\]scalar[/\\]string[/\\]EncodeDecodeFunctionTest.java"
            checks="IllegalTokenText"/>
    <suppress files=".*[/\\]test[/\\]java[/\\].*.java" checks="MethodName"/>
    <suppress files=".*[/\\]test[/\\]java[/\\].*.java" checks="VariableDeclarationUsageDistance"/>
    <suppress files=".*[/\\]test[/\\]java[/\\].*.java" checks="CommentsIndentation"/>
    <suppress files=".*[/\\]test[/\\]java[/\\].*.java" checks="EmptyCatchBlock"/>
    <suppress files=".*[/\\]testFixtures[/\\]java[/\\].*.java" checks="EmptyCatchBlock"/>
    <suppress files=".*[/\\]test[/\\]java[/\\].*.java" checks="AvoidEscapedUnicodeCharacters"/>
    <suppress files=".*[/\\]test[/\\]java[/\\].*.java" checks="EmptyBlock"/>
    <suppress files=".*[/\\]test[/\\]java[/\\].*.java" checks="ConstantName"/>
</suppressions>
