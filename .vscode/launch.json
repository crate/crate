{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "request": "launch",
            "name": "Debug CrateDB",
            "args": "-Cpath.home=${workspaceFolder}/sandbox/crate",
            "cwd": "${workspaceFolder}/app",
            "vmArgs": "-Xms2G -Xmx2G",
            "mainClass": "io.crate.bootstrap.CrateDB",
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "request": "launch",
            "name": "Debug CrateDB Node 2",
            "args": "-Cpath.home=${workspaceFolder}/sandbox/crate2",
            "cwd": "${workspaceFolder}/app",
            "vmArgs": "-Xms2G -Xmx2G",
            "mainClass": "io.crate.bootstrap.CrateDB",
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "request": "launch",
            "name": "Run CrateDB",
            "args": "-Cpath.home=${workspaceFolder}/sandbox/crate",
            "cwd": "${workspaceFolder}/app",
            "vmArgs": "-Xms2G -Xmx2G",
            "mainClass": "io.crate.bootstrap.CrateDB",
            "console": "integratedTerminal",
            "noDebug": true
        },
        {
            "type": "java",
            "request": "attach",
            "name": "Attach to CrateDB",
            "hostName": "127.0.0.1",
            "port": 5005,
            "cwd": "${workspaceFolder}/app"
        }
    ]
}
