<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0 https://maven.apache.org/xsd/assembly-2.2.0.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/../</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>README.rst</include>
        <include>LICENSE</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>

      <!--
      Setting finalName in app/pom.xml <build> results in both:
        - crate-app-<version>.jar
        - crate-<version>.jar
      leading to JarHell. Exclude the latter
      -->
      <excludes>
        <exclude>crate-${git.commit.id.describe}.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/main/dist/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>crate</include>
        <include>crate.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/dist/config</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>crate.yml</include>
        <include>log4j2.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>logs</outputDirectory>
      <excludes>
        <exclude>**/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/crate-admin/</directory>
      <outputDirectory>lib/site</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>../docs/appendices/release-notes/${project.version}.rst</source>
      <outputDirectory>/</outputDirectory>
      <destName>CHANGES.txt</destName>
    </file>
    <file>
      <source>../extensions/functions/src/main/resources/plugin-descriptor.properties</source>
      <outputDirectory>plugins/functions</outputDirectory>
    </file>
    <file>
      <source>../extensions/jmx-monitoring/src/main/resources/plugin-descriptor.properties</source>
      <outputDirectory>plugins/jmx-monitoring</outputDirectory>
    </file>
    <file>
      <source>../extensions/lang-js/src/main/resources/plugin-descriptor.properties</source>
      <outputDirectory>plugins/lang-js</outputDirectory>
    </file>
    <file>
      <source>../plugins/cr8-copy-s3/src/main/resources/plugin-descriptor.properties</source>
      <outputDirectory>plugins/copy-s3</outputDirectory>
    </file>
    <file>
      <source>../plugins/es-analysis-common/src/main/resources/plugin-descriptor.properties</source>
      <outputDirectory>plugins/es-analysis-common</outputDirectory>
    </file>
    <file>
      <source>../plugins/es-analysis-phonetic/src/main/resources/plugin-descriptor.properties</source>
      <outputDirectory>plugins/es-analysis-phonetic</outputDirectory>
    </file>
    <file>
      <source>../plugins/es-repository-azure/src/main/resources/plugin-descriptor.properties</source>
      <outputDirectory>plugins/es-repository-azure</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <!-- optional plugins are handled via the moduleSets further below.

      Shared plugin dependencies are added in the lib folder (due plugins being a runtime dependency on app)
      Unshared dependencies are excluded here, and also handled via moduleSets below
      -->
      <excludes>
        <exclude>io.crate:crate-copy-s3</exclude>
        <exclude>io.crate:crate-functions</exclude>
        <exclude>io.crate:crate-lang-js</exclude>
        <exclude>io.crate:crate-jmx-monitoring</exclude>
        <exclude>io.crate:es-analysis-common</exclude>

        <exclude>io.crate:es-analysis-phonetic</exclude>
        <exclude>org.apache.lucene:lucene-analysis-phonetic</exclude>

        <exclude>io.crate:es-repository-azure</exclude>
        <exclude>com.microsoft.azure:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.crate:crate-copy-s3</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
        <outputDirectory>plugins/copy-s3</outputDirectory>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.crate:crate-functions</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
        <outputDirectory>plugins/functions</outputDirectory>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.crate:crate-lang-js</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
        <outputDirectory>plugins/lang-js</outputDirectory>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.crate:crate-jmx-monitoring</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
        <outputDirectory>plugins/jmx-monitoring</outputDirectory>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.crate:es-analysis-common</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
        <outputDirectory>plugins/es-analysis-common</outputDirectory>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.crate:es-analysis-phonetic</include>
      </includes>
      <binaries>
        <includeDependencies>true</includeDependencies>
        <includes>
          <include>io.crate:es-analysis-phonetic</include>
          <include>org.apache.lucene:lucene-analysis-phonetic</include>
        </includes>
        <unpack>false</unpack>
        <outputDirectory>plugins/es-analysis-phonetic</outputDirectory>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.crate:es-repository-azure</include>
      </includes>
      <binaries>
        <includes>
          <include>io.crate:es-repository-azure</include>
          <include>com.microsoft.azure:*</include>
        </includes>
        <includeDependencies>true</includeDependencies>
        <unpack>false</unpack>
        <outputDirectory>plugins/es-repository-azure</outputDirectory>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>io.crate:jlink-jdk</include>
      </includes>
      <binaries>
        <unpack>true</unpack>
        <includeDependencies>false</includeDependencies>
        <outputDirectory>jdk</outputDirectory>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
